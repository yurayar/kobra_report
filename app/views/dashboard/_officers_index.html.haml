- @officers.order('officer_active DESC').each do |o|
  .officer
    .officer-header
      %p(class="name-logo")
        = o.name.split(//)[0]
      %p
        %span
          = o.name.split[0]
        %br
        = o.name.split[1]
        = o.name.split[2]
    .officer-content
      %p
        %i(class="fa fa-folder" aria-hidden="true")
        Рапортов:
        = o.reports.count
    .officer-footer
      - if o.officer_active
        = button_to change_officer_officers_path, {remote: true, params: {officer: o.id}, class: 'officer-active active-btn'} do
          %i(class="fa fa-toggle-on animated fadeIn")
          %pАктивен
      - else
        = button_to change_officer_officers_path, {remote: true, params: {officer: o.id}, class: 'officer-not-active active-btn'} do
          %i(class="fa fa-toggle-off animated fadeIn")
          %pНе активен